# TreLLM Configuration Example
# Copy this file to ~/.trellm/config.yaml and fill in your values

trello:
  # Get your API key from: https://trello.com/app-key
  api_key: "your-api-key"
  # Generate a token from the same page (click "Token" link)
  api_token: "your-api-token"
  # Board and list IDs can be found in the URL when viewing a board/list
  board_id: "your-board-id"
  todo_list_id: "your-todo-list-id"
  # Optional: specify the READY TO TRY list ID (auto-discovered if not set)
  # ready_to_try_list_id: "your-ready-list-id"
  # Optional: move completed cards to a different board
  # If both done_board_id and done_list_id are set, cards will be moved there
  # done_board_id: "destination-board-id"
  # done_list_id: "destination-list-id"
  # Optional: ICE BOX list for maintenance suggestion cards
  # icebox_list_id: "your-icebox-list-id"

polling:
  # How often to check for new cards (in seconds)
  interval_seconds: 5

claude:
  # Path to Claude Code binary (default: "claude")
  binary: "claude"
  # Timeout for Claude Code execution (in seconds)
  timeout: 1200
  # Run with --dangerously-skip-permissions (default: false)
  yolo: false
  # Global maintenance settings (applies to all projects unless overridden)
  # maintenance:
  #   enabled: true
  #   interval: 10  # Run maintenance every N tickets
  # Per-project configuration
  projects:
    # Project name matches first word of card name
    myproject:
      working_dir: "~/src/myproject"
      # Optional: short aliases for the project name
      # Cards starting with any alias will be routed to this project
      # aliases: ["mp", "myp"]
      # Optional: resume an existing Claude Code session
      # session_id: "existing-session-id"
      # Optional: custom instructions for /compact command
      # compact_prompt: "Preserve Trello workflow context and session management patterns"
      # Optional: per-project maintenance settings (overrides global)
      # maintenance:
      #   enabled: true
      #   interval: 10

state:
  # Where to store session IDs and processed card tracking
  file: "~/.trellm/state.json"
